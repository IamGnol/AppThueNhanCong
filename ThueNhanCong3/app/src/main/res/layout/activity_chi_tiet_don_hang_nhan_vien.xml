        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:hint="Tên khách hàng"-->
        <!--            android:textSize="20dp"-->
        <!--            android:id="@+id/tenkhachhang"/>-->






    </LinearLayout>



</RelativeLayout>