<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D6D2E3"
    tools:context=".TrangchuAdminActivity">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:background="@drawable/vongtrong1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/ttkhanghang"
            android:layout_width="120dp"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/imgkhachang"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/danhsachnhanvien" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgkhachang"
                android:gravity="center"
                android:text="Danh sách khách hàng"
                android:textColor="#090202"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tthoadon"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_toRightOf="@+id/ttkhanghang">

            <ImageView
                android:id="@+id/imghoadon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/danhsachhoadon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imghoadon"
                android:gravity="center"
                android:text="Danh sách hóa đơn"
                android:textColor="#070101"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ttnhanvien"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_toRightOf="@+id/tthoadon">

            <ImageView
                android:id="@+id/imgnhanvien"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/danhsachnhanvien" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgnhanvien"
                android:gravity="center"
                android:text="Danh sách nhân viên"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:background="@drawable/vongtrong1"
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="14dp"
        android:gravity="center">


        <RelativeLayout
            android:layout_marginRight="20dp"
            android:id="@+id/a1"
            android:layout_width="101dp"
            android:layout_height="162dp">

            <ImageView
                android:id="@+id/imgdonhang"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/donhang" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Quản lí đơn hàng"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:id="@+id/a2"
            android:layout_width="112dp"
            android:layout_height="200dp"
            android:layout_toRightOf="@+id/a1">

            <ImageView
                android:id="@+id/nguoidung"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="107dp"
                android:background="@drawable/dangkynhanvien" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="46dp"
                android:gravity="center"
                android:text="Đăng kí nhân viên"
                android:textColor="#000000"
                android:textSize="19dp"
                android:textStyle="bold" />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="463dp"
        android:gravity="center">


        <Button
            android:background="@drawable/vongtron"
            android:id="@+id/dangxuat"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="92dp"
            android:layout_marginBottom="90dp"
            android:gravity="center"
            android:text="Đăng Xuất"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>


</RelativeLayout>