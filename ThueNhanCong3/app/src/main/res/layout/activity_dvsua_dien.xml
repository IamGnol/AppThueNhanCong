<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DVSuaDien">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="#1D8722"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/id_trove"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_chevron_left" />

            <TextView
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SỬA ĐIỆN"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/anhsuadien"/>
            <TextView
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Thợ sửa điện nhà tại TP HCM, dịch vụ nhanh chóng chất lượng uy tín, báo hành dài lâu."
                android:textSize="20dp"/>
            <TextView
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Khắc phục nhan, xử lí mọi sự cố về điện, chập điện, sửa mất điện. Xử lý nhanh sự cố chập điện trong tường. Sửa chữa sự cố mất điện sập Áptomat. Xử lí sự cố rò rỉ điện, làm điện không đủ sáng."
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/banggiasuadien"
                android:background="@drawable/vongtron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bảng giá"/>
            <Button
                android:layout_marginLeft="50dp"
                android:background="@drawable/vongtron"
                android:id="@+id/datlich"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt lịch"/>
        </LinearLayout>



    </LinearLayout>


</androidx.core.widget.NestedScrollView>