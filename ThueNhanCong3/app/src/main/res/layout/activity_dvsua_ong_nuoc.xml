<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DVSuaOngNuoc">\

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="#1D8722"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/id_trove"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_chevron_left" />
            <TextView
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ỐNG NƯỚC"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/anh1"/>
            <TextView
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Thợ sửa cung cấp các dịch vụ thi công lắp đặt sửa chữa hệ thống cấp thoát nước cho gia đình, cơ quan xí nghiệp."
                android:textSize="20dp"/>
            <TextView
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Lắp đặt hệ thống nước dân dụng, hệ thống nước gia đình. Sữa chữa hệ thống ống nước lớn PPR, ổng sắt."
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/banggiaongnuoc"
                android:background="@drawable/vongtron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bảng giá"/>
            <Button
                android:layout_marginLeft="50dp"
                android:background="@drawable/vongtron"
                android:id="@+id/datlich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:text="Đặt lịch"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>