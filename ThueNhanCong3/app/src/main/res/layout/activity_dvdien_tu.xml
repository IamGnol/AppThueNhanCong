<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DVDienTu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="start"
            android:background="#1D8722"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/id_trove"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_chevron_left" />
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:layout_width="280dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ĐIỆN TỬ"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/suadientu"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="- Nhằm phục vụ nhu cầu sửa chữa, bảo hành, bảo dưỡng của quý khách hàng."
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="  Dịch vụ sửa chữa, bảo trì, thay thế máy móc thiết bị cho phòng thí nghiệm như: máy đo khí độc, máy cất nước, tủ ấm, tủ sấy, tủ hút, máy khuấy từ, nồi hấp tiệt trùng, bộ cất đạm, máy quang phổ, với đội ngũ kỹ thuật tay nghề có nhiều kinh nghiệm, thiết bị hiện đại."
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/banggiadientu"
                android:background="@drawable/vongtron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bảng giá"/>
            <Button
                android:layout_marginLeft="50dp"
                android:background="@drawable/vongtron"
                android:id="@+id/datlich"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt lịch"/>
        </LinearLayout>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>