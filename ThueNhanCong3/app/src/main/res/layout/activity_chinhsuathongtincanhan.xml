<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChinhsuathongtincanhanActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/id_trove"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_chevron_left" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THÔNG TIN CÁ NHÂN"/>
    <LinearLayout
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/anhcanhan"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_account"/>
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:paddingLeft="30dp"
            android:background="@drawable/ic_email"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:paddingRight="50dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Email"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:id="@+id/id_emailkhachhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:background="@drawable/ic_brush"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
        <TextView
            android:paddingLeft="5dp"
            android:paddingRight="35dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Họ Tên"/>
        <EditText
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:id="@+id/id_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:background="@drawable/ic_phone"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
        <TextView
            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Điện thoại"/>
        <EditText
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:id="@+id/id_sdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"/>
    </LinearLayout>
    <Button
        android:layout_gravity="center"
        android:background="@drawable/vongtron"
        android:layout_marginTop="100dp"
        android:id="@+id/capnhat"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Cập Nhật Thông Tin"/>
</LinearLayout>

