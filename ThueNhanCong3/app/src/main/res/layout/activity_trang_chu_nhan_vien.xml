<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A9E8E6E6"
    tools:context=".TrangChuNhanVienActivity">
    <RelativeLayout
        android:background="@drawable/vongtrong1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/r2"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="150dp">

    <RelativeLayout

        android:id="@+id/hoadon"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imghoadon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/danhsachhoadon" />

        <TextView
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="18dp"
            android:text="Hóa Đơn" />

    </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/vongtrong1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="150dp">

        <RelativeLayout

            android:id="@+id/a1"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/imglich"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/dsdonhang" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:text="Lich"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>
        <RelativeLayout

            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/a1"
            android:id="@+id/a2"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/imgthongtin"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="61dp"
                android:background="@drawable/taikhoan" />

            <TextView

                android:textColor="#000000"
                android:textSize="19dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="18dp"
                android:text="Thông tin" />

        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/dangxuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/vongtron"
        android:gravity="center"
        android:text="Đăng Xuất"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold" />


</LinearLayout>