<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThongtincanhanActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/id_trove"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_chevron_left" />



    </LinearLayout>
    <LinearLayout
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="#323232"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="THÔNG TIN CÁ NHÂN"/>
    </LinearLayout>

        <ImageView
            android:layout_marginTop="10dp"
        android:id="@+id/anhcanhan"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_account"/>




    <LinearLayout
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:paddingLeft="30dp"
            android:background="@drawable/ic_email"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:paddingRight="50dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Email"/>
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:id="@+id/id_emailkhachhang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Email"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:paddingLeft="30dp"
            android:background="@drawable/ic_baseline"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="35dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Họ Tên"/>
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:id="@+id/id_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Name"/>

    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:paddingLeft="30dp"
            android:background="@drawable/ic_phone"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Điện thoại"/>
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:id="@+id/id_sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="So dien thoai"/>

    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:id="@+id/id_isUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="So dien thoai"/>
    <LinearLayout
        android:visibility="gone"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:paddingLeft="30dp"
            android:background="@drawable/ic_email"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
        <TextView
            android:paddingLeft="5dp"
            android:paddingRight="9dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Mật khẩu"/>
        <TextView
            android:textColor="@color/black"
            android:paddingLeft="12dp"
            android:id="@+id/id_matkhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="mat khau"/>

    </LinearLayout>

    <Button
        android:background="@drawable/vongtron"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/btncapnhat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Cập nhật"/>

</LinearLayout>





