<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ChinhSuaThongTinNhanVien">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/id_trove"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_chevron_left" />

    </LinearLayout>
    <TextView
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="23dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHỈNH SỬA THÔNG TIN"/>
    <ImageView
        android:id="@+id/anhcanhan"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_account"/>

    <LinearLayout
        android:gravity="center"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:paddingLeft="30dp"
            android:background="@drawable/ic_email"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
        <TextView
            android:paddingRight="50dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Email"/>
        <TextView
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:id="@+id/emailnhanvien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Email"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:paddingLeft="30dp"
            android:background="@drawable/ic_brush"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
        <TextView
            android:paddingLeft="5dp"
            android:paddingRight="35dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Họ Tên"/>
        <EditText
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:id="@+id/id_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Name"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:paddingLeft="30dp"
            android:background="@drawable/ic_phone"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
        <TextView
            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Điện thoại"/>
        <EditText
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:id="@+id/id_sdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="So dien thoai"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:paddingLeft="30dp"
            android:background="@drawable/ic_emoji_people"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
        <TextView
            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Công Việc"/>

        <Spinner
            android:id="@+id/id_congviec"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:entries="@array/cong_viec"
            android:paddingLeft="10dp"
            android:text="Công việc"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

    </LinearLayout>
    <Button
        android:layout_margin="30dp"
        android:layout_gravity="center"
        android:background="@drawable/vongtron"
        android:layout_marginTop="100dp"
        android:id="@+id/capnhat"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Cập Nhật Thông Tin"/>

</LinearLayout>