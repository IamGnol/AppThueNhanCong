<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/cardViewdonhang"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="10dp"
            android:id="@+id/imgdonhang1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/donhang"/>
        <TextView
            android:fontFamily="@font/alike"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/imgdonhang1"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Đơn hàng"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/donhang"/>
        <TextView
            android:fontFamily="@font/alike"
            android:paddingLeft="20dp"
            android:layout_toRightOf="@+id/donhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Đơn Hàng"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/txttendonhang"/>
        <TextView
            android:visibility="gone"
            android:paddingLeft="20dp"
            android:layout_marginTop="0dp"
              android:layout_below="@+id/txttendonhang"
           android:layout_toRightOf="@+id/imgdonhang1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày đặt"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/txtngaydat"/>
        <TextView
            android:visibility="gone"
            android:paddingLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/txtngaydat"
            android:layout_toRightOf="@+id/imgdonhang1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/txtsdtdat"/>
        <TextView
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/imgdonhang1"
            android:layout_below="@+id/donhang"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Nội dung:"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/noidung"/>
        <TextView
            android:visibility="gone"
            android:paddingLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/txtsdtdat"
            android:layout_toRightOf="@+id/noidung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/txtnoidung"/>
        <TextView
          android:visibility="gone"
            android:paddingLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/txtnoidung"
            android:layout_toRightOf="@+id/imgdonhang1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/txtdiachi"/>
        <TextView
            android:fontFamily="@font/alike"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/imgdonhang1"
            android:layout_below="@+id/txtemialnv"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Trạng thái"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/trangthai"/>
        <TextView
            android:fontFamily="@font/alike"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/imgdonhang1"
            android:layout_below="@+id/noidung"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Email NV"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/emailnv"/>
        <TextView
            android:fontFamily="@font/alike"
            android:paddingLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/txtnoidung"
            android:layout_toRightOf="@+id/emailnv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email nv"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/txtemialnv"/>

        <TextView
            android:fontFamily="@font/alike"
            android:paddingLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/txtemialnv"
            android:layout_toRightOf="@+id/trangthai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trang thai"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:id="@+id/txthoanthanh"/>
        <TextView
            android:fontFamily="@font/alike"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/imgdonhang1"
            android:layout_below="@+id/trangthai"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/xacnhan"/>
        <TextView
            android:fontFamily="@font/alike"
            android:paddingLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/txthoanthanh"
            android:layout_toRightOf="@+id/xacnhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xac nhan"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:id="@+id/txtxacnhan"/>
        <TextView
            android:visibility="gone"
            android:paddingLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/txtxacnhan"
            android:layout_toRightOf="@+id/imgdonhang1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/txtemial"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>